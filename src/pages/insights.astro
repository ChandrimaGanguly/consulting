---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';

const base = import.meta.env.BASE_URL;

const topics = [
  {
    title: 'AI Governance',
    description: 'Frameworks, policies, and organizational structures for responsible AI',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>`,
  },
  {
    title: 'Technical Deep-Dives',
    description: 'RAG systems, local LLMs, context engineering, and implementation patterns',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>`,
  },
  {
    title: 'Regulatory Landscape',
    description: 'EU AI Act, emerging regulations, and compliance strategies',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
  },
  {
    title: 'Industry Perspectives',
    description: 'Trends, case analyses, and lessons from the field',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>`,
  },
];
---

<BaseLayout
  title="Insights"
  description="Thoughts on responsible AI, governance, and building a more democratic socio-technical future â€” from Dr. Chandrima Ganguly's newsletter 'When is AI responsible?'"
>
  <!-- Hero Section -->
  <section class="section-padding bg-gradient-to-b from-warm-stone/50 to-soft-cream">
    <div class="container-wide mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-terracotta text-sm tracking-widest uppercase mb-4">Insights</p>
          <h1 class="mb-6">When is AI Responsible?</h1>
          <p class="text-xl text-deep-earth/80 leading-relaxed mb-6">
            A newsletter exploring how we can build a more safe, responsible, and democratic
            socio-technical future with AI.
          </p>
          <p class="text-deep-earth/70 leading-relaxed mb-8">
            I share summaries of good news from AI projects, insights from research papers,
            community initiatives, and reflections on what it means to develop and deploy
            AI responsibly.
          </p>
          <a
            href="https://chandrimaganguly.substack.com/s/when-is-ai-responsible"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/>
            </svg>
            Subscribe on Substack
          </a>
        </div>

        <!-- Newsletter preview visual -->
        <div class="relative">
          <div class="bg-white rounded-2xl shadow-2xl p-8 transform rotate-2">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-forest-deep to-sage rounded-full flex items-center justify-center">
                <span class="text-soft-cream font-heading font-bold text-lg">CG</span>
              </div>
              <div>
                <p class="font-heading font-semibold text-forest-deep">When is AI responsible?</p>
                <p class="text-sm text-deep-earth/60">by Chandrima Ganguly</p>
              </div>
            </div>
            <div class="space-y-4">
              <div class="h-4 bg-warm-stone rounded w-full"></div>
              <div class="h-4 bg-warm-stone rounded w-5/6"></div>
              <div class="h-4 bg-warm-stone rounded w-4/6"></div>
              <div class="h-4 bg-warm-stone rounded w-full"></div>
              <div class="h-4 bg-warm-stone rounded w-3/4"></div>
            </div>
          </div>
          <div class="absolute -bottom-4 -left-4 bg-sage/20 rounded-2xl w-full h-full -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section class="section-padding">
    <div class="container-wide mx-auto">
      <SectionHeader
        label="Topics"
        title="What I Write About"
        subtitle="Exploring the intersection of AI technology, ethics, and organizational practice"
      />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-16">
        {topics.map((topic) => (
          <div class="card group hover:border-sage/50">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-sage/10 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-sage/20 transition-colors">
                <svg class="w-6 h-6 text-forest-deep" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={topic.icon}/>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-forest-deep mb-2">{topic.title}</h3>
                <p class="text-deep-earth/70">{topic.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Posts Placeholder -->
  <section class="section-padding bg-warm-stone/30">
    <div class="container-wide mx-auto">
      <SectionHeader
        label="Latest"
        title="Recent Posts"
        subtitle="Fresh thinking on responsible AI"
      />

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
        {[1, 2, 3].map((i) => (
          <article class="card group">
            <div class="aspect-video bg-gradient-to-br from-sage/20 to-forest-deep/10 rounded-lg mb-6 flex items-center justify-center">
              <svg class="w-12 h-12 text-forest-deep/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <p class="text-sm text-sage mb-2">Coming Soon</p>
            <h3 class="font-heading font-semibold text-forest-deep mb-3 group-hover:text-sage transition-colors">
              Insights Loading...
            </h3>
            <p class="text-deep-earth/70 text-sm">
              Subscribe to the newsletter to be notified when new posts are published.
            </p>
          </article>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="https://chandrimaganguly.substack.com/s/when-is-ai-responsible"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-tertiary"
        >
          View all posts on Substack
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup CTA -->
  <section class="section-padding bg-forest-deep text-soft-cream relative overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1502082553048-f009c37129b9?auto=format&fit=crop&w=2000&q=80')] bg-cover bg-center"></div>
    </div>

    <div class="container-narrow mx-auto text-center relative z-10">
      <h2 class="text-soft-cream mb-6">Stay Informed, Stay Intentional</h2>
      <p class="text-xl text-soft-cream/80 mb-8 max-w-2xl mx-auto">
        Join readers who care about building AI that serves humanity's best interests.
        No spam, just thoughtful analysis.
      </p>
      <a
        href="https://chandrimaganguly.substack.com/s/when-is-ai-responsible"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary bg-morning-gold hover:bg-morning-gold/90 text-forest-deep inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/>
        </svg>
        Subscribe to Newsletter
      </a>
    </div>
  </section>
</BaseLayout>
