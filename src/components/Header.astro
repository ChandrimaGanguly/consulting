---
const base = import.meta.env.BASE_URL;
const navLinks = [
  { href: `${base}/about`, label: 'About' },
  { href: `${base}/services`, label: 'Services' },
  { href: `${base}/case-studies`, label: 'Work' },
  { href: `${base}/insights`, label: 'Insights' },
  { href: `${base}/contact`, label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <nav class="container-wide mx-auto px-6 md:px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href={base} class="flex flex-col group">
        <span class="font-heading text-xl md:text-2xl font-bold text-forest-deep group-hover:text-sage transition-colors">
          Chandrima Ganguly
        </span>
        <span class="text-xs md:text-sm text-forest-deep/70 tracking-wide">
          Ph.D.
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-sm font-medium tracking-wide transition-colors duration-300
              ${currentPath === link.href
                ? 'text-terracotta'
                : 'text-forest-deep hover:text-sage'
              }`}
          >
            {link.label}
          </a>
        ))}
        <a href={`${base}/contact`} class="btn-primary text-sm py-2 px-5">
          Start with Intention
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden p-2 text-forest-deep"
        id="mobile-menu-btn"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
            id="menu-icon-open"
          />
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
            id="menu-icon-close"
            class="hidden"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="pt-6 pb-4 space-y-4">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`block py-2 text-lg font-medium transition-colors
              ${currentPath === link.href
                ? 'text-terracotta'
                : 'text-forest-deep hover:text-sage'
              }`}
          >
            {link.label}
          </a>
        ))}
        <a href={`${base}/contact`} class="btn-primary inline-block mt-4">
          Start with Intention
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>

<script>
  // Header background on scroll
  const header = document.getElementById('main-header');

  function updateHeader() {
    if (window.scrollY > 50) {
      header?.classList.add('bg-soft-cream/95', 'backdrop-blur-md', 'shadow-sm');
    } else {
      header?.classList.remove('bg-soft-cream/95', 'backdrop-blur-md', 'shadow-sm');
    }
  }

  window.addEventListener('scroll', updateHeader);
  updateHeader();

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIconOpen?.classList.toggle('hidden');
    menuIconClose?.classList.toggle('hidden');
  });
</script>
