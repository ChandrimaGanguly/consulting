---

<div
  class="card group hover:border-sage transition-all duration-300"
  style={`animation-delay: ${delay}ms`}
>
  <!-- Icon -->
  <div class="w-14 h-14 bg-sage/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-sage/20 transition-colors">
    <svg
      class="w-7 h-7 text-forest-deep"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      set:html={icons[icon] || icons.strategy}
    />
  </div>

  <!-- Content -->
  <h3 class="text-xl font-heading font-semibold text-forest-deep mb-3 group-hover:text-sage transition-colors">
    {title}
  </h3>
  <p class="text-deep-earth/70 leading-relaxed">
    {description}
  </p>

  <!-- Subtle arrow on hover -->
  <div class="mt-4 flex items-center text-sage opacity-0 group-hover:opacity-100 transition-opacity">
    <span class="text-sm font-medium">Learn more</span>
    <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
    </svg>
  </div>
</div>
